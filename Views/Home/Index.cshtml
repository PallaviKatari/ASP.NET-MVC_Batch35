@model MVC_Batch35.Models.Employee

@Html.HiddenFor(model => model.EmpId)

@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
@Html.TextAreaFor(model => model.Address, new { @class = "form-control", rows = "5" })

@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
@Html.PasswordFor(model => model.Password, new { @class = "form-control" })

@Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
<div class="form-group">
    <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-primary active">
            @Html.RadioButtonFor(model => model.Gender, true, new { id = "male-true" })
            @Html.Label("male-true", "Male")
        </label>
        <label class="btn btn-primary">
            @Html.RadioButtonFor(model => model.Gender, false, new { id = "female-true" })
            @Html.Label("female-true", "Female")
        </label>
    </div>
</div>

@Html.LabelFor(model => model.skills, htmlAttributes: new { @class = "control-label col-md-2" })
@Html.EnumDropDownListFor(model => model.skills, new { @class = "form-control" })

@Html.LabelFor(model => model.city, htmlAttributes: new { @class = "control-label col-md-2" })
@Html.EnumDropDownListFor(model => model.city, new { @class = "form-control" })

@Html.LabelFor(model => model.AgreeTerm)
@Html.CheckBoxFor(model => model.AgreeTerm)

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-outline-primary" />
    </div>
</div> 